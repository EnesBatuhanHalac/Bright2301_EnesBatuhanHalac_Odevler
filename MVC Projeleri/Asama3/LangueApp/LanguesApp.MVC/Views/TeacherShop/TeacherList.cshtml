@model TeacherViewModel
<div class="container pt-4">
    <div class="row">
        <div class="col-3">
            <div class="row">
                <div class="col-12 pb-3">
                    <img class="w-100" src="/images/books/@Model.ImageUrl" />
                </div>
            </div>
        </div>
        <div class="col-5 bg-light p-3">
            <h3 class="display-6 fs-4 fw-normal text-danger">@Model.FullName</h3>
            <a asp-area=""
               asp-controller="Home"
               asp-action="AuthorDetails"
               asp-route-url="@Model.Url"
               class="display-6 fs-6 fw-normal text-primary">
                @Model.FullName
            </a>

            <div class="mt-3">
                @for (int i = 0; i < 5; i++)
                {
                    <i class="fa-regular fa-star text-success fa-xs"></i>
                }
            </div>
            @*Yazar Bilgileri*@
            <div>
                <h3 class="bg-warning p-2 fs-6 text-white fw-bold display-6 mt-3">@Model.FullName</h3>
                <img class="float-end me-1" src="https://picsum.photos/100/100" />
                <p class="fs-6">@Html.Raw(Model.About)</p>

            </div>
        </div>
    </div>
</div>
